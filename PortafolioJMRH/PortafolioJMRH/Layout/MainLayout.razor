            <MudNavLink Href="#Proyectos" IconColor="Color.Inherit" Match="NavLinkMatch.Prefix" Icon="@proyectosIcono">Proyectos</MudNavLink>
            <MudNavLink Href="#Servicios" IconColor="Color.Inherit" Match="NavLinkMatch.Prefix" Icon="@serviciosIcono">Servicios</MudNavLink>
            <MudNavLink Href="#Contacto" IconColor="Color.Inherit" Match="NavLinkMatch.Prefix" Icon="@contactoIcono">Contacto</MudNavLink>
