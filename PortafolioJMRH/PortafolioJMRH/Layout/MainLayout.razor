@inherits LayoutComponentBase

<MudThemingProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />
<style>
    .mud-drawer .mud-drawer-content
    {
        background-color: #f1f5f9;
        display: flex;
        justify-content: center;
    }

    .mud-appbar.mud-appbar-fixed-top {
        background-color: #f1f5f9;
    }

    .mud-navmenu{
        background-color: #f1f5f9;
        font-size: 20px;
        font-family: 'Geologica', Akzidenz-Grotesk BQ;
    }
        .mud-navmenu.mud-navmenu-default .mud-nav-link.active:not(.mud-nav-link-disabled){
            color: var(--mud-palette-info);
            background-color: var(--mud-palette-action-default-hover);
        }

    .material-symbols-outlined {
        font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
    }

</style>
<MudLayout>
    <MudAppBar Elevation="0" Dense="true">
        <MudSpacer />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Breakpoint="Breakpoint.Sm" Elevation="2" Variant="@DrawerVariant.Mini">
        <MudNavMenu @onclick="HandleMenuClick">
            <MudIconButton  Icon="@Icons.Material.Filled.Menu" Color="Color.Info" Edge="Edge.End" OnClick="DrawerToggle" />
            <MudNavLink Href="" IconColor="Color.Inherit" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home">Inicio</MudNavLink>
